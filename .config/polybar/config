# Font for progress bars
font-2 = Termsynu:size=8:antialias=false;2

# Font for vertical centering i3 workspace numbers
font-3 = NotoSans-Regular:size=8;2

# Additional icon font
font-4 = Font Awesome:style=Regular;size=10;2

modules-left = powermenu
modules-center = date
modules-right = volume wlan eth backlight battery


[bar/top-tray]
inherits = bar/top

# Position of the system tray window
# If empty or undefined, tray support will be disabled
# NOTE: A center aligned tray will cover center aligned modules
#
# Available positions:
#   left
#   center
#   right
#   none
tray-position = right

# If true, the bar will not shift its
# contents when the tray changes
tray-detached = false

# Tray icon max size
tray-maxsize = 16

# Background color for the tray container
# ARGB color (e.g. #f00, #ff992a, #ddff1023)
# By default the tray container will use the bar
# background color.
tray-background = ${colors.background}

# Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

# Pad the sides of each tray icon
tray-padding = 6

# Scale factor for tray clients
tray-scale = 1.0



